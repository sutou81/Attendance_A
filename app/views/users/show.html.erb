<% provide(:title, @user.name) %>
<div class="container">
  <div>
    <table class="table table-bordered table-condensed user-table">
      <tbody>
        <tr>
          <td><%= link_to "◀", user_path(date: @first_day.prev_month), class:"btn btn-primary" %>
          　<%= l(@first_day, format: :middle) %>
          時間管理表　
          <%= link_to "▶", user_path(date: @first_day.next_month), class:"btn btn-primary" %></td>
          <td>指定時間 : <%= format_basic_info(@user.work_time) %></td>
          <td colspan="3">基本時間 : <%= format_basic_info(@user.basic_time) %></td>
          <td>月初 : <%= l(@first_day, format: :short) %></td>
        </tr>
        <tr>
          <td>所属 : <%= @user.department.present? ? @user.department : "未所属" %></td>
          <td>名前 : <%= @user.name %></td>
          <td>コード</td>
          <td></td>
          <td>出勤日数 : </td>
          <td>末日 : <%= l(@last_day, format: :short) %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="btn-user-show">
    <%= link_to "勤怠を編集", '#', class:"btn btn-success" %>
  </div>
  <div>
    <table class="table table-bordered table-condensed table-hover table-striped " id="table-attendances">
      <thead>
        <tr>
          <th rowspan="2">日付</th>
          <th rowspan="2">曜日</th>
          <th colspan="3">出社</th>
          <th colspan="3">退社</th>
          <th rowspan="2">在社時間</th>
          <th rowspan="2">備考</th>
        </tr>
        <tr>
          <th>時</th>
          <th>分</th>
          <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
          <th>時</th>
          <th>分</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @one_month.each do |day| %>
        <tr>
          <td><%= l(day, format: :short) %></td>
          <td><%= $days_of_the_week[day.wday] %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
      
    </table>
  </div>
</div>