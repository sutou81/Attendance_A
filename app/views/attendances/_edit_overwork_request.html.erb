<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header no-border">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12  overwork-application-style">
					<h4 class="modal-title">【残業申請】</h4>
          <%= form_with(model: @attendance, url: update_overwork_request_user_attendance_path(@user), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @user %>

            <table class="table table-bordered  table-hover table-striped text" >
						<thead>
							<tr>
								<th>日付</th>
								<th>曜日</th>
								<th>終了予定時間</th>
								<th>翌日</th>
								<th>業務内容</th>
								<th>指示確認㊞</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td><%= l(@attendance.worked_on, format: :short) %></td>
                <% if @attendance.worked_on.wday == 6
                    x = "sat"
                  elsif @attendance.worked_on.wday == 0
                    x = "sun"
                  end %>
                <td class="<%= x %>"><%= $days_of_the_week[@attendance.worked_on.wday] %></td>
                <td><%= f.time_select :sceduled_end_time, {include_blank: true
                }, class: "form-control display" %></td>
								<td><%= f.check_box :tomorrow %></td>
								<td><%= f.text_field :business_content, class: "form-control" %></td>


								<td><%= f.collection_select :overtime, @superior, :id, :name, include_blank: true, class: "form-control" %></td>
							<tr>
						</tbody>				
					</table>
					<div class="center" style="margin-top:-10px;">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
          </div>
				
					
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>