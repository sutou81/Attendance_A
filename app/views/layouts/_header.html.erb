<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to '勤怠システム', root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップ", root_path %></li>
        
        <% if current_user? %>
          <% if current_user.admin? %>
            <li><%= link_to "ユーザー一覧", users_path %></li>
            <li><%= link_to "基本情報の修正", edit_basic_info_user_path(@user) %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(:account) %><b class="caret"></b>
            </a> <!-- caret→キャレットアイコン 　▼　←このマーク -->
            <ul class="dropdown-menu">
              <li><%= link_to '勤怠システム', user_path(@user) %></li>
              <li><%= link_to '設定', edit_user_path(@user) %></li>
              <li class="divider"></li> <!-- divider:区切り線みたいなもの -->
              <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>